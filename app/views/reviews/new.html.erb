<div class="panel panel-info">
  <div class="panel-heading">
    <h3>How did you like our product?</h3>
  </div>
  <div class="panel-body">
    <%= form_for [@product, @review] do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content %>
      </div>
      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author %>
      </div>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.number_field :rating, :min => 0, :max => 5 %>
      </div>

      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>
