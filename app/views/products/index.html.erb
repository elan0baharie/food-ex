<h2>Products</h2>
<hr>
<% if @products.any? %>
  <ul>
    <% @products.each do |product|  %>
      <li>Name: <%= link_to product.name, product_path(product) %> - $<%= product.cost %> - Origin: <%= product.country %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to "New Product", new_product_path %>
