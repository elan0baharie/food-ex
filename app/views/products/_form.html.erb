<%= render "layouts/errors", :object => @product %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3>Product</h3>
  </div>
  <div class="panel-body">
    <%= form_for @product do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :cost %>
      <%= f.number_field :cost, :step => 0.01, :min => 0 %>
      <%= f.label :country %>
      <%= f.text_field :country %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
